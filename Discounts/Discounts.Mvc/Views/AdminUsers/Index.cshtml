@model Discounts.Mvc.Models.AdminUsersViewModel

@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-4">User Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                var pendingApp = Model.PendingApplications.FirstOrDefault(a => a.UserId == user.Id);
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (pendingApp != null)
                        {
                            <span class="badge bg-warning text-dark">Pending Applicant</span>
                        }
                        @foreach (var role in user.Roles)
                        {
                            <span class="badge bg-secondary me-1">@role</span>
                        }
                    </td>
                    <td>
                        @if (user.IsBlocked)
                        {
                            <span class="badge bg-danger">Blocked</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Active</span>
                        }
                    </td>
                    <td>
                        <div class="row g-2">
                            <div class="col-auto">
                                @if (user.Email != User.Identity?.Name) // Prevent self-blocking
                                {
                                    <form asp-action="ToggleBlock" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <input type="hidden" name="isCurrentlyBlocked" value="@user.IsBlocked.ToString().ToLower()" />
                                        
                                        @if (user.IsBlocked)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Unblock User">Unblock</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Block User">Block</button>
                                        }
                                    </form>
                                }
                            </div>

                            @if (pendingApp != null)
                            {
                                <div class="col-auto">
                                    <form asp-action="ApproveMerchant" method="post" class="d-inline">
                                        <input type="hidden" name="applicationId" value="@pendingApp.Id" />
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Approve this user as a Merchant?')">
                                            Approve
                                        </button>
                                    </form>
                                </div>
                                <div class="col-auto">
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@pendingApp.Id">
                                        Reject
                                    </button>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-@pendingApp.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="RejectMerchant" method="post">
                                                <input type="hidden" name="applicationId" value="@pendingApp.Id" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Reject Merchant Application</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to reject <strong>@user.FirstName @user.LastName</strong>'s application?</p>
                                                    <div class="mb-3">
                                                        <label class="form-label">Reason for Rejection</label>
                                                        <textarea name="reason" class="form-control" required placeholder="Enter rejection reason..."></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Confirm Reject</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
