<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Discounts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Discounts.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid px-4">
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon">&#10039;</span>
                    Discounts
                </a>

                <!-- Search -->
                <div class="nav-search d-none d-md-flex">
                    <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
                    <input type="text" placeholder="Search for stores, categories or deals..." />
                </div>

                <!-- Toggle for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Role-based nav links -->
                    <ul class="navbar-nav me-auto ms-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Customer" asp-action="MyCoupons">My Coupons</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CustomerReservations" asp-action="MyReservations">My Reservations</a>
                                </li>
                            }
                            else if (User.IsInRole("Merchant"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Merchant" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="MerchantOffers" asp-action="Index">My Offers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Merchant" asp-action="SalesHistory">Sales History</a>
                                </li>
                            }
                            else if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminModeration" asp-action="Index">Moderation</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminSettings" asp-action="Index">Settings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminCategories" asp-action="Index">Categories</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right side auth -->
                    <ul class="navbar-nav gap-2 align-items-center">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hello, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="btn-nav-primary">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn-nav-primary" asp-controller="Auth" asp-action="Register">Sign In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @await Component.InvokeAsync("MerchantApplicationBanner")

    <div class="container-fluid px-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-new">
        <div class="container-fluid px-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="footer-brand">
                        <span class="brand-icon">&#10039;</span>
                        Discounts
                    </div>
                    <p class="footer-desc">
                        The world's most trusted community for sharing and finding the best deals, coupons, and discounts from across the web.
                    </p>
                </div>
                <div class="col-md-2 offset-md-2">
                    <div class="footer-col-title">Platform</div>
                    <ul class="footer-links">
                        <li><a href="#">How it works</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Submit a deal</a></li>
                        <li><a href="#">Partner program</a></li>
                        <li><a href="#">Success stories</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <div class="footer-col-title">Support</div>
                    <ul class="footer-links">
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <span>&copy; 2026 Discounts. All rights reserved.</span>
                <div class="social-links">
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">LinkedIn</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
