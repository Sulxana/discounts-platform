@model Discounts.Application.MerchantApplications.Queries.GetUserMerchantApplication.UserMerchantApplicationDto

<div class="alert alert-danger mb-0 text-center rounded-0 alert-dismissible fade show border-bottom border-danger" role="alert" style="border-width: 0 0 3px 0 !important; font-weight: 500;">
    <div class="container d-flex flex-column flex-md-row justify-content-center align-items-center gap-2">
        <span>
            <i class="bi bi-x-circle-fill me-2"></i>
            <strong>Your merchant application was not approved.</strong> Reason: @Model.RejectionReason
        </span>
        <form method="post" asp-controller="Customer" asp-action="ApplyForMerchant" class="m-0 p-0">
            <button type="submit" class="btn btn-sm btn-outline-danger ms-md-3 mt-2 mt-md-0 fw-bold">Apply Again</button>
        </form>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
