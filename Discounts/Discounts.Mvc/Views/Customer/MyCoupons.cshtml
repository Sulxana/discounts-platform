@model List<Discounts.Application.Coupons.DTOs.CouponDto>

@{
    ViewData["Title"] = "My Coupons";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Coupons</h2>
    
    @if (!User.IsInRole("Merchant"))
    {
            var app = ViewBag.MerchantApplication as Discounts.Application.MerchantApplications.Queries.GetUserMerchantApplication.UserMerchantApplicationDto;

            if (app == null)
            {
                <form method="post" asp-controller="Customer" asp-action="ApplyForMerchant" class="m-0 p-0">
                    <button type="submit" class="btn btn-outline-primary d-flex align-items-center gap-2">
                        <i class="bi bi-shop"></i>
                        <span>Apply to become a Merchant</span>
                    </button>
                </form>
            }
            else if (app.Status == "Pending")
            {
                <div class="d-flex align-items-center gap-2 text-warning fw-bold border border-warning rounded px-3 py-2">
                    <i class="bi bi-hourglass-split"></i>
                    <span>Merchant Application Pending (Submitted @app.CreatedAt.ToLocalTime().ToString("g"))</span>
                </div>
            }
            else if (app.Status == "Rejected")
            {
                <form method="post" asp-controller="Customer" asp-action="ApplyForMerchant" class="m-0 p-0">
                    <button type="submit" class="btn btn-outline-danger d-flex align-items-center gap-2">
                        <i class="bi bi-arrow-counterclockwise"></i>
                        <span>Re-apply for Merchant</span>
                    </button>
                </form>
            }
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't purchased any coupons yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Code</th>
                    <th>Offer</th>
                    <th>Purchased At</th>
                    <th>Expires At</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coupon in Model.OrderByDescending(c => c.PurchasedAt))
                {
                    <tr>
                        <td class="fw-bold font-monospace">@coupon.Code</td>
                        <td>
                            <a asp-controller="Offers" asp-action="Details" asp-route-id="@coupon.OfferId">View Offer</a>
                        </td>
                        <td>@coupon.PurchasedAt.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>@coupon.ExpiresAt.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            @if (coupon.IsRedeemed)
                            {
                                <span class="badge bg-secondary">Used (@coupon.RedeemedAt?.ToString("MMM dd"))</span>
                            }
                            else if (!coupon.IsActive)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
