@model List<Discounts.Application.Offers.Queries.OfferListItemDto>

@{
    ViewData["Title"] = "Offer Moderation";
    int currentPage = ViewBag.CurrentPage ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Pending Offers Moderation</h2>
    <a asp-action="MerchantApplications" class="btn btn-outline-secondary">View Merchant Applications</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">There are no pending offers to moderate at this time.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Offer Title</th>
                    <th>Merchant</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Coupons</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td class="fw-bold"><a asp-controller="Offers" asp-action="Details" asp-route-id="@offer.Id">@offer.Title</a></td>
                        <td>@offer.MerchantName</td>
                        <td>@offer.Category</td>
                        <td>
                            <span class="text-success fw-bold">@offer.DiscountedPrice.ToString("C")</span>
                        </td>
                        <td>@offer.RemainingCoupons</td>
                        <td>
                            <form asp-action="ApproveOffer" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@offer.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@offer.Id">
                                Reject
                            </button>

                            <!-- Reject Modal -->
                            <div class="modal fade" id="rejectModal-@offer.Id" tabindex="-1" aria-labelledby="rejectModalLabel-@offer.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="rejectModalLabel-@offer.Id">Reject Offer: @offer.Title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form asp-action="RejectOffer" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="id" value="@offer.Id" />
                                                <div class="mb-3">
                                                    <label for="reason-@offer.Id" class="form-label">Reason for Rejection</label>
                                                    <textarea class="form-control" id="reason-@offer.Id" name="reason" rows="3" required></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        @if (currentPage > 1)
        {
            <a asp-action="Index" asp-route-page="@(currentPage - 1)" class="btn btn-secondary">Previous</a>
        }
        else
        {
            <div></div>
        }

        @if (Model.Count == 20)
        {
            <a asp-action="Index" asp-route-page="@(currentPage + 1)" class="btn btn-secondary">Next</a>
        }
        else
        {
            <div></div>
        }
    </div>
}
