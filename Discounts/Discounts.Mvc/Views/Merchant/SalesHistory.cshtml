@model List<Discounts.Application.Offers.Queries.GetMerchantSalesHistory.MerchantSalesHistoryDto>

@{
    ViewData["Title"] = "Sales History";
    int currentPage = ViewBag.CurrentPage ?? 1;
}

<h2 class="mb-4">Sales History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't made any sales yet. Keep promoting your offers!</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Offer Title</th>
                    <th>Customer</th>
                    <th>Purchase Date</th>
                    <th>Coupon Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Offers" asp-action="Details" asp-route-id="@sale.OfferId">@sale.OfferTitle</a>
                        </td>
                        <td>@sale.CustomerName</td>
                        <td>@sale.PurchasedAt.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            @if (sale.IsRedeemed)
                            {
                                <span class="badge bg-secondary">Used (@sale.RedeemedAt?.ToString("MMM dd"))</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Unused</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        @if (currentPage > 1)
        {
            <a asp-action="SalesHistory" asp-route-page="@(currentPage - 1)" class="btn btn-secondary">Previous</a>
        }
        else
        {
            <div></div>
        }

        @if (Model.Count == 20)
        {
            <a asp-action="SalesHistory" asp-route-page="@(currentPage + 1)" class="btn btn-secondary">Next</a>
        }
        else
        {
            <div></div>
        }
    </div>
}
